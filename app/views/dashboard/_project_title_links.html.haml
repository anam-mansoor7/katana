.project-links
  - if user_signed_in?
    %ul
      - if project
        = link_to project_path(project), class: (conditions_for_active_project(project).inject{|a,b| a||b} ? 'active' : nil ) do
          %li
            %i.fa.fa-bars
            %span.nav-label Builds
        = link_to project_settings_path(project),
          class: (['settings', 'project_files', 'project_participations'].include?(controller_name) ? 'active' : nil) do
          %li
            %i.fa.fa-wrench
            %span.nav-label= "Settings"
