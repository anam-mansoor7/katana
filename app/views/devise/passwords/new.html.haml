= content_for :meta_title do
  Reset Password - Testributor: Parallel Testing for Ruby on Rails, Python, Javascript and more.

.wrapper-page.animated.fadeInDown
  .panel.panel-color.panel-primary
    .panel-heading
      %h3.text-center.m-t-10
        = link_to root_path do
          %div.logo
            %img{alt: "logo", src: image_path("logo.png")}
            %h2 Log in to Testributor
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal m-t-40' }) do |f|
      = devise_error_messages!
      .form-group
        .col-xs-12
          = f.email_field :email, autofocus: true, class: "form-control",
            type: "text", placeholder: 'E-mail', required: true
      .form-group.text-right
        .col-xs-12
          = f.submit "Send me reset password instructions", class: "btn btn-primary w-md"
      = render "devise/shared/links"
