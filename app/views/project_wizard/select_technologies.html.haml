.panel.panel-default
  = render 'layouts/wizard_steps'

  .row
    .panel-body
      = form_for @project_wizard, url: project_wizard_path do |f|
        .col-xs-6
          %h3 Select language and version
          :ruby
            options = DockerImage.languages.group_by(&:standardized_name).
              map{ |g, c| [g, c.map{|i| [i.public_name, i.id]}]}

          = f.select :docker_image_id, grouped_options_for_select(options)
        .col-xs-6
          %h3 Select technologies
          :ruby
            options = DockerImage.technologies.map{|i| [i.public_name, i.id]}

          = select_tag :technology_ids, options_for_select(options),
            multiple: true, class: 'multi-select'
        .col-xs-12
          .pull-right.m-t-15
            = f.submit "Create project", class: 'btn btn-primary w-lg btn-lg'
